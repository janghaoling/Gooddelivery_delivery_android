<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:background="#FFFFFF"
    android:focusableInTouchMode="true"
    tools:context="com.gooddelivery.delivery.activities.Login">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        android:src="@drawable/driver_app_logo" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:fontFamily="@font/nunito_bold"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/country_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/enter_mobile_number"
            android:padding="8dp"
            android:src="@drawable/flag_cl"/>

        <TextView
            android:id="@+id/country_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:text="+56"/>

        <EditText
            android:id="@+id/mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/enter_mobile_number"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"/>


    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/continu"
        android:textColor="@color/colorWhite"
        android:layout_margin="16dp"
        android:layout_below="@+id/linearLayout"
        android:fontFamily="@font/nunito_bold" />

</RelativeLayout>